{
  "name": "actionable-inbox-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/api",
    "packages/web"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@actionable-inbox/web",
    "dev:api": "npm run dev --workspace=@actionable-inbox/api",
    "dev:web": "npm run dev --workspace=@actionable-inbox/web",
    "build": "npm run build --workspaces",
    "db:migrate": "npm run db:migrate --workspace=@actionable-inbox/api",
    "db:seed": "npm run db:seed --workspace=@actionable-inbox/api"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "concurrently": "^8.2.2"
  }
}
